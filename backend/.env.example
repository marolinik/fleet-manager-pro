# Database
DATABASE_URL="postgresql://user:password@localhost:5432/fleet_manager"

# Server
PORT=3001
NODE_ENV=development

# Auth0
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=https://api.fleet-manager.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM=noreply@fleet-manager.com

# Frontend URL
FRONTEND_URL=http://localhost:5173

# JWT Secret (for internal tokens)
JWT_SECRET=your-super-secret-jwt-key

# Notification settings
NOTIFICATION_DAYS_BEFORE_EXPIRY=30